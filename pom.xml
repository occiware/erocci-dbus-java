<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.occiware.erocci.java</groupId>
  <artifactId>erocci-dbus-java</artifactId>
  <version>1.0-SNAPSHOT</version>
  <name>erocci-dbus-java</name>
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
  
  <dependencies>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
      <version>1.7.19</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-log4j12</artifactId>
      <version>1.7.7</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>net.windwards.3rdparty</groupId>
      <artifactId>dbus</artifactId>
      <version>2.9</version>
    </dependency>
    <dependency>
      <groupId>net.windwards.3rdparty</groupId>
      <artifactId>dbus-bin</artifactId>
      <version>2.9</version>
    </dependency>

    <dependency>
      <groupId>net.windwards.3rdparty</groupId>
      <artifactId>matthew-hexdump</artifactId>
      <version>0.2</version>
    </dependency>
    <dependency>
      <groupId>net.windwards.3rdparty</groupId>
      <artifactId>matthew-debug</artifactId>
      <version>1.1</version>
    </dependency>
    <dependency>
      <groupId>net.windwards.3rdparty</groupId>
      <artifactId>matthew-unix</artifactId>
      <version>0.5</version>
    </dependency>
    <dependency>
      <!-- OCCI Core Model implementation. -->
      <groupId>Clouddesigner</groupId>
      <artifactId>org.occiware.clouddesigner.occi</artifactId>
      <version>0.1.0-SNAPSHOT</version>
    </dependency>
    
    <!-- Requires Eclipse Modeling Framework. -->
    <dependency>
      <groupId>org.eclipse.core</groupId>
      <artifactId>commands</artifactId>
      <version>3.3.0-I20070605-0010</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.eclipse.jface</groupId>
      <artifactId>databinding</artifactId>
      <version>1.1.0-I20070606-0010</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.eclipse.ui</groupId>
      <artifactId>ide</artifactId>
      <version>3.3.0-I20070620</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.eclipse.swt</groupId>
      <artifactId>org.eclipse.swt.gtk.linux.x86</artifactId>
      <version>4.3</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.eclipse.emf</groupId>
      <artifactId>org.eclipse.emf.ecore</artifactId>
      <version>2.11.1-v20150805-0538</version>
    </dependency>
    <dependency>
      <groupId>org.eclipse.emf</groupId>
      <artifactId>org.eclipse.emf.common</artifactId>
      <version>2.11.0-v20150805-0538</version>
    </dependency>
    <dependency>
      <groupId>org.eclipse.emf</groupId>
      <artifactId>org.eclipse.emf.ecore.xmi</artifactId>
      <version>2.11.1-v20150805-0538</version>
      <scope>runtime</scope>
    </dependency>
    <!-- Eclipse OCL required. -->
    <dependency>
      <groupId>org.eclipse.ocl</groupId>
      <artifactId>org.eclipse.ocl.pivot</artifactId>
      <version>1.0.1.v20150908-1239</version>
      <scope>compile</scope>
    </dependency>
    <!-- Is required by Eclipse OCL. -->
    <dependency>
      <groupId>org.eclipse.ocl</groupId>
      <artifactId>org.eclipse.ocl.common</artifactId>
      <version>1.3.0.v20150519-0914</version>
      <scope>compile</scope>
    </dependency>
    <!-- Is required by Eclipse OCL. -->
    <dependency>
      <groupId>org.eclipse.emf</groupId>
      <artifactId>org.eclipse.emf.edit</artifactId>
      <!-- TODO: This is not the same version. -->
      <version>2.11.0-v20150123-0357</version>
      <!-- 2.11.1.v20150805-0538 -->
      <scope>compile</scope>
    </dependency>
    <!-- Guava is used by Eclipse OCL. -->
    <dependency>
      <groupId>com.google.guava</groupId>
      <artifactId>guava</artifactId>
      <version>19.0-rc2</version>
      <scope>compile</scope>
    </dependency>
    <!-- Log4J is used by Eclipse OCL. -->
    <dependency>
      <groupId>log4j</groupId>
      <artifactId>log4j</artifactId>
      <version>1.2.17</version>
      <scope>compile</scope>
    </dependency>
    <!-- Eclipse OSGi is used by Eclipse OCL. -->
    <dependency>
      <groupId>org.eclipse</groupId>
      <artifactId>osgi</artifactId>
      <version>3.10.0-v20140606-1445</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.eclipse.xtext</groupId>
      <artifactId>org.eclipse.xtext.xbase.lib</artifactId>
      <version>2.9.2</version>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.12</version>
      <scope>test</scope>
    </dependency>

  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-install-plugin</artifactId>
        <version>2.4</version>
        <executions>
          <execution>
            <id>maven-dbus-plugin</id>
            <phase>initialize</phase>
            <goals>
              <goal>install-file</goal>
            </goals>
            <configuration>
              <groupId>net.windwards</groupId>
              <artifactId>maven-dbus-plugin</artifactId>
              <version>0.3</version>
              <packaging>jar</packaging>
              <file>${basedir}/lib/maven-dbus-plugin-0.3.jar</file>
            </configuration>
          </execution>
          <execution>
            <id>dbus</id>
            <phase>initialize</phase>
            <goals>
              <goal>install-file</goal>
            </goals>
            <configuration>
              <groupId>net.windwards.3rdparty</groupId>
              <artifactId>dbus</artifactId>
              <version>2.9</version>
              <packaging>jar</packaging>
              <file>${basedir}/lib/libdbus-java-2.9.jar</file>
            </configuration>
          </execution>
          <execution>
            <id>dbus-bin</id>
            <phase>initialize</phase>
            <goals>
              <goal>install-file</goal>
            </goals>
            <configuration>
              <groupId>net.windwards.3rdparty</groupId>
              <artifactId>dbus-bin</artifactId>
              <version>2.9</version>
              <packaging>jar</packaging>
              <file>${basedir}/lib/dbus-java-bin-2.9.jar</file>
            </configuration>
          </execution>
          <execution>
            <id>matthew-hexdump</id>
            <phase>initialize</phase>
            <goals>
              <goal>install-file</goal>
            </goals>
            <configuration>
              <groupId>net.windwards.3rdparty</groupId>
              <artifactId>matthew-hexdump</artifactId>
              <version>0.2</version>
              <packaging>jar</packaging>
              <file>${basedir}/lib/hexdump-0.2.jar</file>
            </configuration>
          </execution>
          <execution>
            <id>matthew-debug</id>
            <phase>initialize</phase>
            <goals>
              <goal>install-file</goal>
            </goals>
            <configuration>
              <groupId>net.windwards.3rdparty</groupId>
              <artifactId>matthew-debug</artifactId>
              <version>1.1</version>
              <packaging>jar</packaging>
              <file>${basedir}/lib/debug-enable-1.1.jar</file>
            </configuration>
          </execution>
          <execution>
            <id>matthew-unix</id>
            <phase>initialize</phase>
            <goals>
              <goal>install-file</goal>
            </goals>
            <configuration>
              <groupId>net.windwards.3rdparty</groupId>
              <artifactId>matthew-unix</artifactId>
              <version>0.5</version>
              <packaging>jar</packaging>
              <file>${basedir}/lib/unix-0.5.jar</file>
            </configuration>
          </execution>
          <execution>
            <id>Clouddesigner-parent</id>
            <phase>initialize</phase>
            <goals>
              <goal>install-file</goal>
            </goals>
            <configuration>
              <groupId>Clouddesigner</groupId>
              <artifactId>org.occiware.clouddesigner.parent</artifactId>
              <version>0.1.0-SNAPSHOT</version>
              <packaging>pom</packaging>
              <file>${basedir}/lib/org.occiware.clouddesigner.parent-0.1.0-SNAPSHOT.pom</file>
            </configuration>
          </execution>
          <execution>
            <id>Clouddesigner-occi</id>
            <phase>initialize</phase>
            <goals>
              <goal>install-file</goal>
            </goals>
            <configuration>
              <groupId>Clouddesigner</groupId>
              <artifactId>org.occiware.clouddesigner.occi</artifactId>
              <version>0.1.0-SNAPSHOT</version>
              <packaging>jar</packaging>
              <file>${basedir}/lib/org.occiware.clouddesigner.occi-0.1.0-SNAPSHOT.jar</file>
            </configuration>
          </execution>
          <execution>
            <id>eclipse-ocl</id>
            <phase>initialize</phase>
            <goals>
              <goal>install-file</goal>
            </goals>
            <configuration>
              <groupId>org.eclipse.ocl</groupId>
              <artifactId>org.eclipse.ocl.pivot</artifactId>
              <version>1.0.1.v20150908-1239</version>
              <packaging>jar</packaging>
              <file>${basedir}/lib/org.eclipse.ocl.pivot-1.0.1.v20150908-1239.jar</file>
            </configuration>
          </execution>
          <execution>
            <id>eclipse-ocl-common</id>
            <phase>initialize</phase>
            <goals>
              <goal>install-file</goal>
            </goals>
            <configuration>
              <groupId>org.eclipse.ocl</groupId>
              <artifactId>org.eclipse.ocl.common</artifactId>
              <version>1.3.0.v20150519-0914</version>
              <packaging>jar</packaging>
              <file>${basedir}/lib/org.eclipse.ocl.common-1.3.0.v20150519-0914.jar</file>
            </configuration>
          </execution>
          
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <version>2.6</version>
        <configuration>
          <descriptorRefs>
            <descriptorRef>jar-with-dependencies</descriptorRef>
          </descriptorRefs>
          <archive>
            <manifest>
              <addClasspath>true</addClasspath>
              <mainClass>org.ow2.erocci.backend.BackendDBusService</mainClass>
              <classpathPrefix>lib/</classpathPrefix>
            </manifest>
          </archive>
        </configuration>
        <executions>
          <execution>
            <id>assemble-all</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.1</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
          <compilerArgs>
            <arg>-parameters</arg>
          </compilerArgs>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <version>2.6</version>
        <configuration>
          <archive>
            <manifest>
              <addClasspath>true</addClasspath>
              <mainClass>org.ow2.erocci.backend.BackendDBusService</mainClass>
              <classpathPrefix>lib/</classpathPrefix>
            </manifest>
          </archive>
        </configuration>
      </plugin>
      
      
      <plugin>
        <groupId>net.windwards</groupId>
        <artifactId>maven-dbus-plugin</artifactId>
        <version>0.3</version>
        <dependencies>
          <dependency>
            <groupId>net.windwards.3rdparty</groupId>
            <artifactId>dbus</artifactId>
            <version>2.9</version>
          </dependency>
          <dependency>
            <groupId>net.windwards.3rdparty</groupId>
            <artifactId>dbus-bin</artifactId>
            <version>2.9</version>
          </dependency>
        </dependencies>
        <executions>
          <execution>
            <phase>generate-sources</phase>
            <goals>
              <goal>generate</goal>
            </goals>
            <configuration>
              <output>${basedir}/src/generated/java</output>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <!-- Add src/generated/java as source directory (contains java files to compile) -->
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <version>1.10</version>
        <executions>
          <execution>
            <phase>generate-sources</phase>
            <goals>
              <goal>add-source</goal>
            </goals>
            <configuration>
              <sources>
                <source>src/generated/java</source>
              </sources>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <!-- Clean phase should remove generated code -->
      <plugin>
        <artifactId>maven-clean-plugin</artifactId>
        <version>3.0.0</version>
        <configuration>
          <filesets>
            <fileset>
              <directory>src/generated/java</directory>
              <includes>
                <include>**</include>
              </includes>
              <followSymlinks>false</followSymlinks>
            </fileset>
          </filesets>
        </configuration>
      </plugin>

    </plugins>
  </build>
</project>

